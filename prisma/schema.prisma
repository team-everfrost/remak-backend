// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt  @id @default(autoincrement())
  email    String  @unique
  password String?
  name     String?
  imageUrl String?
  role     Role    @default(BASIC)
  uid      String  @default(cuid())

  documents Document[]
  socials   Social[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Social {
  id         BigInt @id @default(autoincrement())
  providerId String
  provider   String

  userId BigInt
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("social")
}

model Document {
  id      BigInt       @id @default(autoincrement())
  title   String?
  type    DocumentType
  url     String?
  content String?
  summary String?
  status  Status       @default(PENDING)

  authorId BigInt
  author   User          @relation(fields: [authorId], references: [id])
  tags     TagDocument[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("article")
}

model Tag {
  id   BigInt @id @default(autoincrement())
  name String

  articles TagDocument[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tag")
}

model TagDocument {
  articleId BigInt
  tagId     BigInt
  article   Document @relation(fields: [articleId], references: [id])
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@id([articleId, tagId])
  @@map("tag_article")
}

// 나중에 인메모리 DB로 바꿀 것
model Email {
  id         BigInt  @id @default(autoincrement())
  email      String  @unique
  signupCode String
  verified   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email")
}

enum Role {
  BASIC
  PLUS
  ADMIN
}

enum DocumentType {
  WEB
  MEMO
  IMAGE
  FILE
}

enum Status {
  PENDING
  PROCESSING
  APPROVED
  REJECTED
}
